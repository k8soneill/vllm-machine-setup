apiVersion: monitoring.coreos.com/v1
kind: ServiceMonitor
metadata:
  name: vllm-metrics
  namespace: {{ monitoring_namespace | default('monitoring') }}
  labels:
    app: vllm
spec:
  selector:
    matchLabels:
      app: {{ vllm_deployment_name | default('vllm') }}
  namespaceSelector:
    matchNames:
      - {{ vllm_namespace | default('default') }}
  endpoints:
    - port: http
      interval: {{ monitoring_scrape_interval | default('30s') }}
      path: /metrics
